<% include partials/header%>
<% include partials/navbar%>
    <script src="/socket.io/socket.io.js"></script>


    <div class="container hidden">
        <input type="text" id="pickedName" placeholder="write your username">
        <button class="btn btn primary" id="submitName">Go into lobby</button>
    </div>

    <div class="ui steps">
        <div class="active step" id="language-stage">
            <i class="language icon"></i>
            <div class="content">
                <div class="title">Language</div>
                <div class="description">Choose the languages that you want to play with</div>
            </div>
        </div>
        <div class="disabled step" id="chat-stage">
            <i class="rocketchat icon"></i>
            <div class="content">
                <div class="title">Chat</div>
                <div class="description">Join a lobby and chat</div>
            </div>
        </div>
        <div class="disabled step" id="game-stage">
            <i class="gamepad icon"></i>
            <div class="content">
                <div class="title">Play</div>
                <div class="description">Entering playing stage</div>
            </div>
        </div>
    </div>


    <button type="button" class="btn btn-secondary" id="modal" data-toggle="modal" data-target="#languagePicking">
        Choose your languages
    </button>
    
    <div class="modal fade" id="languagePicking" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalCenterTitle">Pick your languages</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
                <div class="container language">
                    <h4>Choose your native language</h4>
                    <select class="ui dropdown native">
                        <option value="">Native language</option>
                    </select>   
                    <h4>Choose the language you want to learn</h4>
                    <select class="ui dropdown learn">
                        <option value="">language</option>
                    </select> 
                </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-secondary" id="language">Save changes</button>
            </div>
          </div>
        </div>
    </div>

    <div class="container rooms hidden">
        <div class="col-xs-12 col-sm-8">
                    <ul id="rooms">
                    
                    </ul>

            <button class="btn btn-danger full-width random hidden">Random lobby</button>
            <button class="btn btn-danger full-width new-room">Make a new room</button>
    
        </div>
    </div>


    <div class="row chat hidden">
            <div class="col-xs-12 col-sm-8">
                <div id="messages">
                    
                </div>
                <!-- <ul id="messages">

                </ul> -->
                <input type="text" id="message" placeholder="Enter message">


                <button class="btn btn-danger send">Send</button>
                <button class="btn btn-secondary leave">Leave room</button>
            </div>
            <div class="col-xs-12 col-sm-4">
                <button class="btn btn-danger" id="ready" type="button">Ready</button>

            </div>

    </div>


    <div class="container hidden" id="game-aria">
            
        <button type="button" class="btn bg-info" id="instruction" data-toggle="modal" data-target="#instructions">Instructions</button>
                    
        <div class="modal fade" id="instructions" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Instructions</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                </div>
                                <div class="modal-body" id="instruction-text">
                                        The instructions
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
        </div>

        <div class="container" id="quiz-aria">
            <h1 id="statement-text">He was ……………………. by the police, but he refused to reveal the secret.</h1>
        </div>
        <div class="container" id="response-aria">
                <div class="btn-group" role="group">
                        <button type="button" class="btn btn-lg btn-info response" id="response-1">Left</button>
                        <button type="button" class="btn btn-lg btn-info response" id="response-2">Middle</button>
                        <button type="button" class="btn btn-lg btn-info response" id="response-3">Right</button>
                        <button type="button" class="btn btn-lg btn-info response" id="response-4">Right</button>
                </div>

                <div class="container hidden" id="div-extra">
                    <h3 id="extra"></h3>
                </div>
        </div>

        <button class="btn bg-info" id="continue">Continue</button>
    </div>

    <div class="container hidden" id="results-aria">
            <h1 id="h1-results"></h1>
    </div>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.3/semantic.min.css">
    <link rel="stylesheet" href="/stylesheets/navbar.css">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/chat.css">
    
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.3/semantic.min.js"></script>
    
    <script src="navbar.js"></script>
    <script src="chat.js"></script>
</body>
</html>